import React, { useState } from 'react';
import { ingredientsList } from '../../data/ingredients/ingredientsList';

export default function InstructorRequisitionPage({ hideNav = false }) {
  const [instructor, setInstructor] = useState('');
  const [week, setWeek] = useState('');
  const [course, setCourse] = useState('');
  const [recipes, setRecipes] = useState('');
  const [program, setProgram] = useState('');
  const [orderItems, setOrderItems] = useState({});

  // Instructor list
  const instructors = ["Cabrera", "McRoy", "Mikesell", "Moreno", "O'Donnell", "Toscano", "Wong"];

  // Week options
  const weeks = Array.from({ length: 16 }, (_, i) => `Week ${i + 1}`);

  // Courses by program
  const courses = {
    'Baking & Pastry': ['CUL160', 'CUL260', 'CUL168'],
    'Culinary Arts': ['CUL140', 'CUL130', 'CUL150'],
    'Foodservice': ['FSM101', 'FSM201']
  };

  // Get ingredients filtered by program
  const getIngredientsByProgram = () => {
    if (!program) return [];
    
    if (program === 'Baking & Pastry') {
      return ingredientsList.filter(item => 
        item.category === 'BAKING' || 
        item.category === 'DAIRY' ||
        item.category === 'DAIRY & EGGS'
      );
    }
    
    if (program === 'Culinary Arts') {
      return ingredientsList.filter(item => 
        item.category === 'PRODUCE' || 
        item.category === 'PROTEIN' ||
        item.category === 'DAIRY' ||
        item.category === 'DAIRY & EGGS' ||
        item.category === 'PANTRY'
      );
    }
    
    return ingredientsList;
  };

  const updateQuantity = (itemId, value) => {
    setOrderItems(prev => ({
      ...prev,
      [itemId]: parseFloat(value) || 0
    }));
  };

  const handleSubmit = () => {
    if (!instructor || !week || !course) {
      alert('Please fill in Instructor, Week, and Class');
      return;
    }

    // Filter to only items with quantities
    const items = Object.entries(orderItems)
      .filter(([_, qty]) => qty > 0)
      .map(([itemId, qty]) => {
        const item = ingredientsList.find(i => i.id === itemId);
        return {
          id: item.id,
          name: item.name,
          quantity: qty,
          unit: item.unit,
          category: item.category
        };
      });

    if (items.length === 0) {
      alert('Please enter at least one item quantity');
      return;
    }

    const order = {
      id: `ORD-${Date.now()}`,
      instructor,
      instructorName: instructor,
      week,
      course,
      recipes,
      program,
      items,
      status: 'submitted',
      createdAt: new Date().toISOString(),
      name: `${instructor} - ${course} - ${week}`
    };

    // Save to localStorage (will be replaced with backend later)
    const existingOrders = JSON.parse(localStorage.getItem('orders') || '[]');
    existingOrders.push(order);
    localStorage.setItem('orders', JSON.stringify(existingOrders));

    alert(`Order submitted successfully!\n\n${items.length} items ordered for ${course} ${week}`);
    
    // Clear form
    setOrderItems({});
    setRecipes('');
  };

  const handleClear = () => {
    setOrderItems({});
    setRecipes('');
  };

  const filteredIngredients = getIngredientsByProgram();
  
  // Group by category
  const ingredientsByCategory = filteredIngredients.reduce((acc, item) => {
    const category = item.category || 'Other';
    if (!acc[category]) acc[category] = [];
    acc[category].push(item);
    return acc;
  }, {});

  const totalItems = Object.values(orderItems).filter(qty => qty > 0).length;

  return (
    <>
      {hideNav && (
        <header className="bg-white border-b border-gray-200 shadow-sm">
          <div className="max-w-6xl mx-auto px-6 py-4">
            <div className="flex items-center gap-6">
              <img src="/pcc-logo.png" alt="Pima Community College" className="h-12" />
              <div className="border-l-4 border-blue-500 pl-6">
                <h1 className="text-2xl font-bold text-gray-800">Lab Requisition</h1>
                <p className="text-sm text-gray-600">Culinary Arts and Baking \& Pastry Arts</p>
              </div>
            </div>
          </div>
        </header>
      )}
    <div className="p-6 max-w-6xl mx-auto">
      {/* Header */}
      <div className="mb-6">
        <h1 className="text-3xl font-bold text-gray-900">Lab Requisition</h1>
        <p className="text-gray-600">Select items you need for your culinary lab</p>
      </div>

      {/* Form Header */}
      <div className="bg-white rounded-lg shadow-sm p-6 mb-6">
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Instructor Name: <span className="text-red-600">*</span>
            </label>
            <select
              value={instructor}
              onChange={(e) => setInstructor(e.target.value)}
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select Instructor</option>
              {instructors.map(name => (
                <option key={name} value={name}>{name}</option>
              ))}
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Week: <span className="text-red-600">*</span>
            </label>
            <select
              value={week}
              onChange={(e) => setWeek(e.target.value)}
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select Week</option>
              {weeks.map(w => (
                <option key={w} value={w}>{w}</option>
              ))}
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Program: <span className="text-red-600">*</span>
            </label>
            <select
              value={program}
              onChange={(e) => {
                setProgram(e.target.value);
                setCourse('');
              }}
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select Program</option>
              <option value="Baking & Pastry">Baking & Pastry</option>
              <option value="Culinary Arts">Culinary Arts</option>
              <option value="Foodservice">Foodservice</option>
            </select>
          </div>
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Class Name & CRN: <span className="text-red-600">*</span>
            </label>
            <select
              value={course}
              onChange={(e) => setCourse(e.target.value)}
              disabled={!program}
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 disabled:bg-gray-100"
            >
              <option value="">Select Class</option>
              {program && courses[program].map(c => (
                <option key={c} value={c}>{c}</option>
              ))}
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Recipe & Page # (Please indicate which book you are using):
            </label>
            <input
              type="text"
              value={recipes}
              onChange={(e) => setRecipes(e.target.value)}
              placeholder="e.g., Cookies, SD p42; Ginger Bread, Blondies"
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            />
          </div>
        </div>

        {totalItems > 0 && (
          <div className="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
            <div className="text-sm font-semibold text-blue-900">
              {totalItems} items in requisition
            </div>
          </div>
        )}
      </div>

      {/* Action Buttons */}
      <div className="bg-white rounded-lg shadow-sm p-4 mb-6 flex justify-between items-center">
        <div className="text-sm text-gray-600">
          {program ? `Showing ${program} items` : 'Select a program to view items'}
        </div>
        <div className="flex gap-3">
          <button
            onClick={handleClear}
            className="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600"
          >
            Clear
          </button>
          <button
            onClick={handleSubmit}
            disabled={!instructor || !week || !course || totalItems === 0}
            className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:bg-gray-300 disabled:cursor-not-allowed"
          >
            Submit Requisition
          </button>
        </div>
      </div>

      {/* Ingredients List */}
      {program && (
        <div className="bg-white rounded-lg shadow-sm overflow-hidden">
          <div className="overflow-x-auto">
            <table className="w-full text-sm">
              <thead className="bg-gray-50 border-b">
                <tr>
                  <th className="px-4 py-3 text-left font-semibold text-gray-700">Item</th>
                  <th className="px-4 py-3 text-center font-semibold text-gray-700">Unit</th>
                  <th className="px-4 py-3 text-center font-semibold text-gray-700 bg-green-50">Order</th>
                  <th className="px-4 py-3 text-center font-semibold text-gray-700">Returned</th>
                </tr>
              </thead>
              <tbody className="divide-y divide-gray-200">
                {Object.entries(ingredientsByCategory).map(([category, items]) => (
                  <React.Fragment key={category}>
                    <tr className="bg-gray-100">
                      <td colSpan="4" className="px-4 py-2 font-semibold text-gray-700">
                        {category}
                      </td>
                    </tr>
                    {items.map((item, idx) => (
                      <tr 
                        key={item.id}
                        className={idx % 2 === 0 ? 'bg-white' : 'bg-gray-50'}
                      >
                        <td className="px-4 py-3">
                          <div className="font-medium text-gray-900">{item.name}</div>
                          <div className="text-xs text-gray-500">{item.id}</div>
                        </td>
                        <td className="px-4 py-3 text-center text-gray-600">
                          {item.unit}
                        </td>
                        <td className="px-4 py-3 text-center bg-green-50">
                          <input
                            type="number"
                            min="0"
                            step="0.5"
                            value={orderItems[item.id] || ''}
                            onChange={(e) => updateQuantity(item.id, e.target.value)}
                            placeholder="0"
                            className="w-20 px-2 py-1 border border-gray-300 rounded text-center"
                          />
                        </td>
                        <td className="px-4 py-3 text-center">
                          <input
                            type="number"
                            disabled
                            className="w-20 px-2 py-1 border border-gray-200 rounded text-center bg-gray-100 text-gray-400"
                            placeholder="-"
                          />
                        </td>
                      </tr>
                    ))}
                  </React.Fragment>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      )}

      {!program && (
        <div className="bg-white rounded-lg shadow-sm p-12 text-center">
          <div className="text-gray-400 text-lg">
            Please select a program to view available items
          </div>
        </div>
      )}

      {/* Instructions */}
      <div className="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <h3 className="font-semibold text-blue-900 mb-2">Instructions:</h3>
        <ol className="text-sm text-blue-800 space-y-1 list-decimal list-inside">
          <li>Fill in your name, week, program, and class information</li>
          <li>Add recipe information (optional but helpful)</li>
          <li>Enter quantities in the "Order" column (in Edible Portion - what you need)</li>
          <li>Review your order and click "Submit Requisition"</li>
          <li>"Returned" column is for items you return to inventory (filled in later)</li>
        </ol>
      </div>
    </div>
    </>
  );
}
